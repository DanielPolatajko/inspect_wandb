{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug Inspect",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/inspect",
            "console": "integratedTerminal",
            "args": [ // add whatever args you want to pass to inspect
                "eval",
                "hellaswag.py",
                "--limit",
                "5"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "INSPECT_WANDB_WEAVE_AUTOPATCH": "true"
            }
        },
        {
            "name": "Debug Inspect (eval-set)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/inspect.exe",
            "console": "integratedTerminal",
            "args": [ // add whatever args you want to pass to inspect
                "eval-set",
                "inspect_evals/agentic_misalignment",
                "--log-dir",
                "test-openrouter-2",
                "--model",
                "openrouter/openai/gpt-4o-mini",
                "--display",
                "plain",
                "--epochs",
                "10"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
        },
        {
            "name": "Debug Inspect (Windows)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/inspect.exe",
            "console": "integratedTerminal",
            "args": [ // add whatever args you want to pass to inspect
                "eval-set",
                "test.py",
                "--log-dir",
                "test-openrouter-3",
                "--limit",
                "5"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${fileDirname}",
        },
    ]
}